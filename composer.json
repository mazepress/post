{
	"name": "mazepress/post",
	"type": "wordpress-plugin",
	"description": "A package library for managing custom post type.",
	"license": "MIT",
	"require": {
		"php": "^7.4 | ^8.0",
		"composer/installers": "^2.2"
	},
	"require-dev": {
		"phpcompatibility/phpcompatibility-wp": "^2.1.4",
		"wp-coding-standards/wpcs": "^3.0.1",
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0",
		"szepeviktor/phpstan-wordpress": "^1.3.2",
		"phpunit/phpunit": "^9.6.16",
		"10up/wp_mock": "^1.0",
		"teqnomaze/code-coverage": "^1.0"
	},
	"scripts": {
		"phpcs": "./vendor/bin/phpcs --standard=phpcs.xml",
		"phpcbf": "./vendor/bin/phpcbf src tests",
		"phpstan": "./vendor/bin/phpstan analyse -c phpstan.neon --memory-limit 2G",
		"phpunit": "./vendor/bin/phpunit --configuration phpunit.xml",
		"coverage": "./vendor/bin/code-coverage ./build/clover.xml 90"
	},
	"autoload": {
		"psr-4": {
			"Mazepress\\Post\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Mazepress\\Post\\Tests\\": "tests"
		}
	},
	"prefer-stable": true,
	"minimum-stability": "dev",
	"config": {
		"optimize-autoloader": true,
		"sort-packages": true,
		"allow-plugins": {
			"composer/installers": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
